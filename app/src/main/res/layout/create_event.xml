<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/event"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/event_pic" />

    <ImageView
        android:id="@+id/orgpic"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/event"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="24dp"
        android:theme="@style/InputText"
        app:layout_constraintLeft_toRightOf="@+id/orgpic"
        app:layout_constraintTop_toTopOf="@+id/orgpic">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="Event Title"
            android:soundEffectsEnabled="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/event"
        tools:layout_editor_absoluteX="8dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/datetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:theme="@style/InputTextBlack">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_event_black_24dp"
                android:drawablePadding="15dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="Date"
                android:inputType="datetime"
                android:soundEffectsEnabled="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />
        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/starttimetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start: "
                android:textSize="15dp" />

            <Button
                android:layout_marginLeft="8dp"
                android:id="@+id/starttimebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onStartTimeButtonClicked"
                android:text="Set Time" />

        </LinearLayout>

        <LinearLayout
            android:paddingLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/endtimetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End: "
                android:textSize="15dp" />

            <Button
                android:layout_marginLeft="8dp"
                android:id="@+id/endtimebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onEndTimeButtonClicked"
                android:text="Set Time"/>

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/locationtext"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:theme="@style/InputTextBlack">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="15dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="Location"
                android:soundEffectsEnabled="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/descriptiontext"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:theme="@style/InputTextBlack">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_description_black_24dp"
                android:drawablePadding="15dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="Description"
                android:soundEffectsEnabled="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tagtext"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:theme="@style/InputTextBlack"
        app:layout_constraintBottom_toTopOf="@+id/linearlayout"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_label_black_24dp"
            android:drawablePadding="15dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="Tag"
            android:soundEffectsEnabled="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/peopletext"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:theme="@style/InputTextBlack"
        app:layout_constraintBottom_toTopOf="@+id/tagtext"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="15dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="Maximum Capacity"
            android:inputType="number"
            android:soundEffectsEnabled="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/cancelButton"
            style="@style/EventButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/notGoingColor"
            android:text="CANCEL"
            android:theme="@style/AppTheme.Button" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/createButton"
            style="@style/EventButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/goingColor"
            android:text="CREATE"
            android:theme="@style/AppTheme.Button" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>







